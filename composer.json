{
    "name": "3sidedcube/laravel-api-erros",
    "description": "A lightweight package for handling API error responses.",
    "keywords": [
        "3sidedcube",
        "laravel-api-errors"
    ],
    "homepage": "https://github.com/3sidedcube/laravel-api-errors",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ben Sherred",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.3",
        "orchestra/testbench": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Cube\\LaravelApiErrors\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cube\\LaravelApiErrors\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/php-cs-fixer fix -v --dry-run --stop-on-violation --using-cache=no",
            "./vendor/bin/phpunit"
        ],
        "lint": "./vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Cube\\LaravelApiErrors\\ApiErrorServiceProvider"
            ]
        }
    }
}
